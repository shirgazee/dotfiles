alias config='/usr/bin/git --git-dir=$HOME/.cfg/ --work-tree=$HOME'
alias ls='lsd'
alias l='ls -l'
alias la='ls -a'
alias lla='ls -la'
alias lt='ls --tree'
alias k=kubectl
alias kg='kubectl get'
alias kgp='kubectl get pods'
alias kd='kubectl describe'
alias kl='kubectl logs' 
alias o='open .'
alias g='git'
alias ga='git add '
alias gch='git checkout'
alias gs='git status -sb'
alias gc='git commit -a -m'
alias gl='git log'
alias glo='git log --oneline'
alias glp='git log --graph --date=short --branches --pretty=format:"%C(yellow)%h%C(reset) %ad | %C(75)%s%C(reset) %C(yellow)%d%C(reset) [%an]"'
alias gp='git push'
alias gpm='git pull origin master'
alias gst='git stash'
alias gsta='git stash apply'
alias gstp='git stash pop'
alias uuid='echo -n $(uuidgen) | pbcopy'
alias vim='nvim'
